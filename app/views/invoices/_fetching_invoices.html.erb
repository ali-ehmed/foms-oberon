<% if @current_invoices.present? %>
	<blockquote>
		<h3><%= @project_name %></h3>
	</blockquote>
	<div class="table-responsive">
		<table class="table table-striped table-hover" id="invoices_table">
			<thead>
				<th>Hours</th>
				<th>% Alloc</th>
				<th>$ Billing</th>
				<th>No of Days Worked</th>
				<th>Description</th>
				<th>Rates (US$)</th>
				<th>Unpaid Leaves</th>
				<th>Amount (US$)</th>
				<th>Reminder</th>
			</thead>
			<tbody>
				<% @current_invoices.each do |invoice| %>
					<tr>
						<td><%= employee_hours(invoice) %></td>
						<td><%= invoice.percentage_alloc %></td>
						<td><%= employee_billing(invoice) %></td>
						<td><%= employee_worked_days(invoice) %></td>
						<td><%= employee_description(invoice) %></td>
						<td><%= invoice.rates %></td>
						<td><%= invoice.unpaid_leaves %></td>
						<td><%= invoice.amount %></td>
						<td><%= invoice.reminder %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<% else %>
	<div class="alert alert-info">
		<blockquote style="margin:0;"><strong>No Record Present</strong></blockquote>
	</div>
<% end %>


