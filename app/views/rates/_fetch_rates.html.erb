<div class="row">&nbsp;</div>
<div class="container-fluid">
	<% if @rates.present? %>
		<div class="table-responsive">
			<table class="table table-striped table-hover"> 
			  <thead>
			    <tr>
			      <th>#</th>
			      <th>Desgination</th>
			      <th>History</th>
			      <th>Team Based Rates</th>
			      <th>Hourly Rates</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @rates.each_with_index do |rate, counter| %>
			  		<% count = counter + 1 %>
				  	<tr>
				  		<td><%= count %></td>
				  		<td><%= rate.designation.try(:designation) %></td>
				  		<td><%= link_to "View History", "javascript:void(0);", class: "label label-primary", onclick: "getDesignationRateHistory(this);", "data-designation-id" => "#{rate.designation_id}" %></td>
				  		<td>
				  			<a href="javascript:void(0);" class="text-info" data-toggle="tooltip" data-placement="top" title="Click to edit"><%= best_in_place rate, :team_based_rates, :as => :input, :path => rate_path(rate.id) %></a>
			  			</td>
				  		<td>
				  			<a href="javascript:void(0);" class="text-info" data-toggle="tooltip" data-placement="top" title="Click to edit"><%= best_in_place rate, :hour_based_rates, :as => :input, :path => rate_path(rate.id) %></a>
				  		</td>
				  	</tr>
			  	<% end %>
			  </tbody>
			</table> 
			<%= will_paginate @rates, renderer: BootstrapPagination::Rails %>
		</div>	
	<% else %>
		<div class="alert alert-danger">
			<%# if params[:revision_date].blank? and Rate.count > 0 %>

				<!-- <strong>Please Select Date</strong> -->

			<%# elsif @rates.blank? and params[:revision_date].present? %>

				<!-- <strong><%#= "No rates present for #{params[:revision_date]}" %></strong> -->

			<%# else %>

				<strong><%= "There are no Rates Present. Sync Designations." %></strong>

			<%# end %>
		</div>
	<% end %>
</div>

