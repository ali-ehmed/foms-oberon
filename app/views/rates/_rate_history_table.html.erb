<div class="table-responsive">
  <table class="table table-striped table-hover"> 
    <thead>
      <tr>
        <th>Date</th>
        <th>Team Based Rates</th>
        <th>Hourly Rates</th>
        <th>Is Active</th>
      </tr>
    </thead>
    <tbody>
      <% rates.each do |rate| %>
        <tr>
          <td><%= rate.revision_date.strftime("%d %B, %Y") %></td>
          <td>
            <a href="javascript:void(0);" class="text-info" data-toggle="tooltip" data-placement="top" title="Click to edit"><%= best_in_place rate, :team_based_rates, :as => :input, :path => rate_path(rate.id) %></a>
          </td>
          <td>
            <a href="javascript:void(0);" class="text-info" data-toggle="tooltip" data-placement="top" title="Click to edit"><%= best_in_place rate, :hour_based_rates, :as => :input, :path => rate_path(rate.id) %></a>
          </td>
          <td>
            <%= best_in_place rate, :iscurrent, as: :checkbox, collection: ["No", "Yes"], :path => rate_path(rate.id) %>
          </td>
          <!-- <td><%#= rate.team_based_rates.nil? ? "---" : rate.team_based_rates %></td>
          <td><%#= rate.hour_based_rates.nil? ? "---" : rate.hour_based_rates %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table> 
</div>