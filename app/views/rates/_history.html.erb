<div class="modal fade" id="designation_rate_history_<%= designation_id %>">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">History of <strong><span id="designation_name"></span></strong></h4>
      </div>
      <div class="modal-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover"> 
            <thead>
              <tr>
                <th>Date</th>
                <th>Team Based Rates</th>
                <th>Hourly Rates</th>
              </tr>
            </thead>
            <tbody>
              <% rates.each do |rate| %>
                <tr>
                  <td><%= rate.revision_date.strftime("%d %B, %Y") %></td>
                  <td><%= rate.team_based_rates %></td>
                  <td><%= rate.hour_based_rates %></td>
                </tr>
              <% end %>
            </tbody>
          </table> 
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>