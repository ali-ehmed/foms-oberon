<div class="row">&nbsp;</div>
<div class="page-header">
  <h3>Employee History Detailed <small><%= if !@summarized_report.blank? and !@detailed_report.blank? then "#{@rm_project_name}" else "" end %></small></h3>
</div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
    <% if !@detailed_report.blank? %>
     <!--  <a class="btn btn-default pull-right" href="../profitability/export_history_to_exel?project_id=<%#=@project_id%>&start_date=<%#=@start_date%>&end_date=<%#=@end_date%>&export=<%#=1%>" role="button">
          <span class="glyphicon glyphicon-export" aria-hidden="true"></span> Export as Excel
      </a> -->
      <div class="table-responsive">
        <table class="table table-striped table-hover history_table employee_history_report_table">
          <thead>
            <tr>
              <th align="center">Employee Id</th>
              <th>Employee Name</th>
              <th>Billing Type</th>
              <th>Allocation (%)</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Prorated Allocation (%) </th>
              <th>Cost</th>
              <th>Revenue</th>
              <th>Profit/Loss</th>
            </tr>
          </thead>
          <tbody>
            <% @detailed_report.each do |report| %>
              <tr>
                <td align="center"><%= report[:employee_id] %></td>
                <td><%= report[:employee_name] %></td>
                <td><%= report[:billing_type] %></td>
                <td><%= report[:allocation_age] %></td>
                <td><%= report[:start_date] %></td>
                <td><%= report[:end_date] %></td>
                <td><%= report[:prorated] %></td>
                <td><%= report[:cost] %></td>
                <td><%= report[:revenue] %></td>
                <td><%= report[:profit_or_loss] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <br />
      <div class="alert alert-info">
        <blockquote style="margin: 0 0 2px;">
          No Report Present
        </blockquote>
      </div>
    <% end %>
  </div>
</div>

