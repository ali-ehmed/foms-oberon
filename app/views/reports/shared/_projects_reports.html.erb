<div id="profitability-report">
  <% if @profitability_reports.present? %>
    <div id="prof_report_dollar_rate">
      <blockquote></blockquote>
    </div>
  	<div class="table-responsive">
  		<table  class="table table-hover table-striped prof_report_table">
        <thead>
          <tr>
            <th>Division</th>
            <th>Project</th>
            <th>Employee</th>
            <th>Month</th>
            <th>Year</th>
            <th>(%) Alloc</th>
            <th>Days</th>
            <th>COGS</th>
            <th>Operational Expense</th>
            <th>Profit</th>
          </tr>
        </thead>
        <tbody>
          <% @profitability_reports.each do |report| %>
            <tr>
            	<td><%= report.div_name %></td>
              <td><%= report.project.name %></td>
              <td><%= report.employee.full_name %></td>
              <td><%= report.month %></td>
              <td><%= report.year %></td>
              <td><%= report.percentage_allocation %></td>
              <td><%= report.no_of_days %></td>
              <td><%= report.cogs %></td>
              <td><%= report.operational_exp %></td>
              <td><%= report.profit %></td>
            </tr>
          <% end %>
      	</tbody>
    	</table>
    </div>
  <% else %>
    <div class="alert alert-danger">
      <blockquote style="margin:0;">No Project Report Present</blockquote>
    </div>
  <% end %>
</div>