<% content_for :reports do %>
	<blockquote>
		<h2>Employee History Report</h2>
	</blockquote>
	<%= form_tag employee_history_reports_profitability_reports_path, method: :get do %>
		<div class="row">
			<div class="col-md-12">
				<div class="row">
					<div class="col-md-4">
						<%= label_tag "Select Project:" %>
	        	<%= select_tag :report_project_id, options_for_select(@rm_projects.map{|m| [m.name, m.project_id]}, params[:report_project_id]), prompt: "--Select Designation--", class: "form-control" %>
					</div>
					<div class="col-md-4">
						<%= label_tag "Start Date:" %>
	        	<%= text_field_tag :start_date, params[:start_date], :class => "form-control", :placeholder => "Start Date" %>
					</div>
					<div class="col-md-4">
						<%= label_tag "End Date:" %>
	        	<%= text_field_tag :end_date, params[:end_date], :class => "form-control", :placeholder => "End Date" %>
					</div>
				</div>
			</div>
		</div>
		<div class="row">&nbsp;</div>
		<div class="row">
			<div class="col-md-6">
				<%= button_tag 'Search', id: "get_report", :class => 'btn btn-danger', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Searching"} %>
				<%= link_to "Reset", employee_history_reports_profitability_reports_path, class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
	<div class="row">&nbsp;</div>
	<ul class="nav nav-tabs">
		<li class="active"><a href="#detailed_report" data-toggle="tab" aria-expanded="false">Detailed Report</a></li>
	  <li class=""><a href="#summarized_report" data-toggle="tab" aria-expanded="true">Summarized Report</a></li>
	</ul>
	<div id="myTabContent" class="tab-content">
	  <div class="tab-pane fade active in" id="detailed_report">
	  	<%= render "reports/shared/detailed_history" %>
	  </div>
	  <div class="tab-pane fade in" id="summarized_report">
	  	<%= render "reports/shared/summarized_history" %>	
	  </div>
  </div>
<% end %>